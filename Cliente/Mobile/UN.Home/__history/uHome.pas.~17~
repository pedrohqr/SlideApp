unit uHome;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants, 
  FMX.Types, FMX.Graphics, FMX.Controls, FMX.Forms, FMX.Dialogs, FMX.StdCtrls,
  uBase, FMX.Layouts, FMX.ListBox;

type
  TFrm_Home = class(TFormBase)
    LB: TListBox;
    lbi_New_Mass: TListBoxItem;
    lbi_Masses: TListBoxItem;
    lbi_Songs: TListBoxItem;
    procedure lbi_New_MassClick(Sender: TObject);
    procedure FormKeyUp(Sender: TObject; var Key: Word; var KeyChar: Char;
      Shift: TShiftState);
    procedure lbi_SongsClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    procedure LoadParish(User_ID : Integer);
  public
    { Public declarations }
  end;

var
  Frm_Home: TFrm_Home;

implementation

{$R *.fmx}

uses
{$IFDEF ANDROID}
  Androidapi.Helpers,
  Androidapi.JNI.App,
{$ENDIF}

uNewMass, uMain, uSong;

procedure TFrm_Home.FormCreate(Sender: TObject);
begin
  inherited;
  LoadParish(ID_User);
end;

procedure TFrm_Home.FormKeyUp(Sender: TObject; var Key: Word; var KeyChar: Char;
  Shift: TShiftState);
begin
  inherited;
  if Key = vkHardwareBack then
  begin
    Key := 0;

    MessageDlg('Deseja fechar a aplicação?', System.UITypes.TMsgDlgType.mtInformation,
    [System.UITypes.TMsgDlgBtn.mbYes,System.UITypes.TMsgDlgBtn.mbNo], 0,
    procedure(const AResult: System.UITypes.TModalResult)
    begin
      case AResult of
        mrYES:
        begin
          {$IFDEF ANDROID}
            TAndroidHelper.Activity.finish;
          {$ENDIF}
        end;
      end;
    end);
  end;
end;

procedure TFrm_Home.lbi_New_MassClick(Sender: TObject);
begin
  inherited;
  Frm_Main.OpenForm(TFrm_New_Mass);
end;

procedure TFrm_Home.lbi_SongsClick(Sender: TObject);
begin
  inherited;
  OpenForm(TFrm_Songs);
end;

procedure TFrm_Home.LoadParish(User_ID: Integer);
begin
  TThread.CreateAnonymousThread(procedure
  begin
    try
      try

      except on e : exception do

      end;
    finally

    end;
  end).Start;
end;

end.
